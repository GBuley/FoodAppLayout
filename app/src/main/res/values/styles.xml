<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->
    <style name="guideline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="guideline.horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="guideline.vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="margin_horizontal">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="margin_horizontal.below">
        <item name="android:layout_marginTop">35dp</item>
    </style>

    <style name="food_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="backgroundColor">?colorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.MyTheme.Food</item>
    </style>

    <style name="food_text">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="food_text.title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimaryVariant</item>
    </style>

    <style name="price_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="add_button">
        <item name="android:drawableBottom">@drawable/ic_baseline_add_24</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">start</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyTheme.Add</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

</resources>
